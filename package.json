{
  "name": "python",
  "version": "1.0.0",
  "description": "Собственный сайт на MkDocs с кастомной темой",
  "main": "postcss.config.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "css:build": "postcss assets/css/main.css -o site/assets/css/main.min.css",
    "js:build": "terser assets/js/main.js -c -m -o site/assets/js/main.min.js",
    "html:minify": "html-minifier-terser --input-dir site --output-dir site --file-ext html --collapse-whitespace --remove-comments --minify-css true --minify-js true",
    "html:validate": "html-validator --file=site/index.html --verbose",
    "build:assets": "npm run css:build && npm run js:build && npm run html:minify",
    "test": "npm run html:validate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Andrey122333/static_site.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/Andrey122333/static_site/issues"
  },
  "homepage": "https://github.com/Andrey122333/static_site#readme",
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.1.1",
    "html-minifier-terser": "^7.2.0",
    "html-validator-cli": "^7.0.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "terser": "^5.44.0"
  }
}
